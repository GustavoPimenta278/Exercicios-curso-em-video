<body>
    <header>
        <h1>Somando Valores</h1>
    </header>
    
    <!--Inputs e o resultado-->
    <div>
        <input type="number" name="primeiroNumero" id="primeiroNumero"> +
        <input type="number" name="segundoNumero" id="segundoNumero"> =
        <div class="quadradoResultado" id="resultado"></div>
        <button onclick="somar()" id="botãoSoma">somar</button>
    </div>

    <script>
        //função de soma e mudança na div do resultado
        function somar() {
            var input1 = window.document.getElementById('primeiroNumero');
            var input2 = window.document.getElementById('segundoNumero');
            var resultado = window.document.getElementById('resultado');
            var numero1 = Number(input1.value);
            var numero2 = Number(input2.value);
            var soma = numero1 + numero2;

                resultado.innerHTML = `${soma}`;
                resultado.style.color = 'black';
        }

        primeiroNumero.focus();
    </script>
