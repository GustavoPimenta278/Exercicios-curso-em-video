<body>
    <div id="quadrado" class='estiloQuadrado'>
        Ol√°!
    </div>
    

    <script>

        var area = window.document.getElementById('quadrado')
        area.addEventListener('click', clicar)
        area.addEventListener('mouseenter', entrar)
        area.addEventListener('mouseout', sair)

        function clicar () {
            
            area.innerText = 'fui clicado!';
            area.style.color = 'purple';
            area.style.background = 'orange';
        }

        function entrar() {
            area.innerText = 'Tudo bem?';
            area.style.background = 'green';
            area.style.color = 'white';
        }

        function sair() {
            area.innerText = 'boa sorte!';
            area.style.background = 'yellowgreen';
            ara.style.color = 'white';
        }
    </script>
</body>
